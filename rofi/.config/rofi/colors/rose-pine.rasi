 * Colors adapted from: https://github.com/rose-pine/rose-pine
 * Author: Aakrisht Sharma Paudel (AakrishtSP)
 * Github: @AakrishtSP
 ******************************************************************************/
* {
    // RosÃ© Pine Color Palette
    base:           #191724;
    surface:        #1f1d2e;
    overlay:        #26233a;
    muted:          #6e6a86;
    subtle:         #908caa;
    text:           #e0def4;
    love:           #eb6f92;
    gold:           #f6c177;
    rose:           #ebbcba;
    pine:           #31748f;
    foam:           #9ccfd8;
    iris:           #c4a7e7;
    highlight-low:  #21202e;
    highlight-med:  #403d52;
    highlight-high: #524f67;

    // Derived Theme Variables
    foreground:                  @text;
    normal-foreground:           @text;
    selected-normal-foreground:  @base;
    urgent-foreground:           @love;
    active-foreground:           @foam;
    selected-urgent-foreground:  @base;
    selected-active-foreground:  @base;
    
    background:                  @base;
    normal-background:           @base;
    selected-normal-background:  @rose;
    urgent-background:           @base;
    active-background:           @overlay;
    selected-urgent-background:  @love;
    selected-active-background:  @foam;
    
    // Alternating pattern colors
    alternate-normal-background: @surface;
    alternate-normal-foreground: @normal-foreground;
    alternate-urgent-background: @surface;
    alternate-urgent-foreground: @urgent-foreground;
    alternate-active-background: @surface;
    alternate-active-foreground: @active-foreground;
    
    separatorcolor:              @muted;
    bordercolor:                 @muted;
    border-color:                @muted;
    
    spacing:                     2;
    background-color:            @base;
    
    highlight:                   @iris;
    subtle-text:                 @subtle;
}

window {
    background-color: @base;
    border:           1;
    border-color:     @muted;
    border-radius:    8;
    padding:          15;
    width:            600;
}

mainbox {
    border:  0;
    padding: 0;
}

message {
    border:        1;
    border-color:  @muted;
    padding:       8 0;
    margin:        0 0 5 0;
}

textbox {
    text-color: @text;
    font:       "JetBrains Mono 12";
}

listview {
    fixed-height: 0;
    border:       1;
    border-color: @muted;
    spacing:      3;
    scrollbar:    true;
    padding:      8 0 0 0;
    margin:       5 0;
    dynamic:      true;
}

element {
    border:  0;
    padding: 8 12;
    border-radius: 4;
    margin:  2 0;
}

element-text {
    background-color: inherit;
    text-color:       inherit;
    vertical-align:   0.5;
}

element.normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
    font:             "Fira Sans 14";
}

element.normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
    font:             "Fira Sans Bold 14";
}

element.normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
    font:             "Fira Sans 14";
}

element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
    border-left:      3;
    border-color:     @highlight;
    font:             "Fira Sans Bold 14";
}

element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
    border-left:      3;
    border-color:     @gold;
    font:             "Fira Sans Bold 14";
}

element.selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
    border-left:      3;
    border-color:     @pine;
    font:             "Fira Sans Bold 14";
}

element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
    font:             "Fira Sans 14";
}

element.alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
    font:             "Fira Sans Bold 14";
}

element.alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
    font:             "Fira Sans 14";
}

scrollbar {
    width:        6;
    border:       0;
    handle-color: @iris;
    handle-width: 8;
    padding:      0;
}

inputbar {
    spacing:    0;
    text-color: @text;
    padding:    10;
    background: @surface;
    border-radius: 6;
    margin:     0 0 10 0;
    children:   [ prompt, textbox-prompt-colon, entry, case-indicator ];
}

textbox-prompt-colon {
    expand:     false;
    str:        "ðŸŒ¹";
    margin:     0 10 0 5;
    text-color: @rose;
    font:       "Symbols Nerd Font 16";
}

entry {
    text-color:   @text;
    font:         "Fira Sans 14";
    cursor:       text;
    cursor-color: @iris;
}

prompt {
    text-color: @iris;
    font:       "Fira Sans Bold 14";
}

case-indicator {
    text-color: @subtle;
    margin:     0 0 0 10;
}

mode-switcher {
    border:       2;
    border-color: @muted;
    padding:      8;
    margin:       10 0 0 0;
}

button {
    padding:      5 10;
    border-radius: 4;
    font:         "Fira Sans 14";
}

button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
    border-bottom:    2;
    border-color:     @iris;
    font:             "Fira Sans Bold 14";
}

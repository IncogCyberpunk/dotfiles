/**
 * Indigo Theme for Rofi
 * Deep blue and purple color scheme
 * Author: Aakrisht Sharma Paudel (AakrishtSP)
 * Original by: Dave Davenport
 */

* {
    /* Indigo color palette */
    indigo-deep:     #1A237E;
    indigo-primary:  #283593;
    indigo-accent:   #3F51B5;
    frost-white:     #E8EAF6;
    silver-text:     #C5CAE9;
    teal-accent:     #00695C;
    cyan-light:      #B2EBF2;
    red-warning:     #B71C1C;
    pink-alert:      #FFCDD2;
    amber-active:    #DF6E00;
    
    /* Interface colors */
    background:              @indigo-deep;
    background-alt:          @indigo-primary;
    foreground:              @frost-white;
    selected:                @indigo-accent;
    active:                  @teal-accent;
    urgent:                  @red-warning;
    
    /* Derived colors */
    background-color:        transparent;
    border-color:            @frost-white;
    separatorcolor:          @frost-white;
    scrollbar-handle:        @silver-text;
    
    /* Text colors */
    normal-background:       rgba(152, 108, 128, 0.03);
    normal-foreground:       @foreground;
    alternate-normal-background: @background-alt;
    alternate-normal-foreground: @foreground;
    selected-normal-background:  @selected;
    selected-normal-foreground:  @frost-white;
    
    active-background:       rgba(223, 110, 0, 0.06);
    active-foreground:       @cyan-light;
    alternate-active-background: @active;
    alternate-active-foreground: @cyan-light;
    selected-active-background:  @cyan-light;
    selected-active-foreground:  @teal-accent;
    
    urgent-background:       rgba(223, 110, 0, 0.06);
    urgent-foreground:       @pink-alert;
    alternate-urgent-background: @urgent;
    alternate-urgent-foreground: @pink-alert;
    selected-urgent-background:  @pink-alert;
    selected-urgent-foreground:  @red-warning;
}
window {
    location:         center;
    anchor:           center;
    fullscreen:       false;
    width:            600px;
    x-offset:         0px;
    y-offset:         0px;
    margin:           0px;
    padding:          0px;
    border:           2px solid;
    border-radius:    8px;
    border-color:     @border-color;
    cursor:           "default";
    background-color: @background;
}

mainbox {
    enabled:          true;
    spacing:          10px;
    margin:           0px;
    padding:          20px;
    border:           0px solid;
    border-radius:    0px;
    border-color:     @border-color;
    background-color: transparent;
    children:         [ "inputbar", "message", "listview", "mode-switcher" ];
}

inputbar {
    enabled:          true;
    spacing:          10px;
    margin:           0px;
    padding:          8px 12px;
    border:           1px solid;
    border-radius:    6px;
    border-color:     @border-color;
    background-color: @background-alt;
    text-color:       @foreground;
    children:         [ "textbox-prompt-colon", "entry" ];
}

prompt {
    enabled:          true;
    background-color: transparent;
    text-color:       @selected;
}

textbox-prompt-colon {
    enabled:          true;
    expand:           false;
    str:              "‚ùØ";
    background-color: transparent;
    text-color:       @selected;
}

entry {
    enabled:          true;
    background-color: transparent;
    text-color:       @foreground;
    cursor:           text;
    placeholder:      "Search...";
    placeholder-color: @silver-text;
}

num-filtered-rows {
    enabled:          true;
    expand:           false;
    background-color: transparent;
    text-color:       @silver-text;
}

textbox-num-sep {
    enabled:          true;
    expand:           false;
    str:              "/";
    background-color: transparent;
    text-color:       @silver-text;
}

num-rows {
    enabled:          true;
    expand:           false;
    background-color: transparent;
    text-color:       @silver-text;
}

case-indicator {
    enabled:          true;
    background-color: transparent;
    text-color:       @silver-text;
}

listview {
    enabled:          true;
    columns:          1;
    lines:            8;
    cycle:            true;
    dynamic:          true;
    scrollbar:        true;
    layout:           vertical;
    reverse:          false;
    fixed-height:     true;
    fixed-columns:    true;
    spacing:          4px;
    margin:           0px;
    padding:          0px;
    border:           0px solid;
    border-radius:    0px;
    border-color:     @border-color;
    background-color: transparent;
    text-color:       @foreground;
    cursor:           "default";
}

scrollbar {
    handle-width:     8px;
    handle-color:     @scrollbar-handle;
    border-radius:    4px;
    background-color: @background-alt;
}

element {
    enabled:          true;
    spacing:          8px;
    margin:           0px;
    padding:          8px;
    border:           0px solid;
    border-radius:    4px;
    border-color:     @border-color;
    background-color: transparent;
    text-color:       @foreground;
    cursor:           pointer;
}

element normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
}

element normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
}

element normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
}

element selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}

element selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
}

element selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
}

element alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
}

element alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
}

element alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
}

element-icon {
    background-color: transparent;
    text-color:       inherit;
    size:             18px;
    cursor:           inherit;
}

element-text {
    background-color: transparent;
    text-color:       inherit;
    highlight:        inherit;
    cursor:           inherit;
    vertical-align:   0.5;
    horizontal-align: 0.0;
}

mode-switcher {
    enabled:          true;
    spacing:          10px;
    margin:           0px;
    padding:          0px;
    border:           0px solid;
    border-radius:    0px;
    border-color:     @border-color;
    background-color: transparent;
    text-color:       @foreground;
}

button {
    padding:          8px 16px;
    border:           1px solid;
    border-radius:    4px;
    border-color:     @border-color;
    background-color: @background-alt;
    text-color:       @foreground;
    cursor:           pointer;
}

button selected {
    background-color: @selected;
    text-color:       @selected-normal-foreground;
}

message {
    enabled:          true;
    margin:           0px;
    padding:          8px;
    border:           2px solid;
    border-radius:    0px;
    border-color:     @separatorcolor;
    background-color: @background-alt;
    text-color:       @foreground;
}

textbox {
    padding:          8px;
    border:           0px solid;
    border-radius:    0px;
    border-color:     @border-color;
    background-color: transparent;
    text-color:       @foreground;
    vertical-align:   0.5;
    horizontal-align: 0.0;
    highlight:        none;
    placeholder-color: @silver-text;
    blink:            true;
    markup:           true;
}

error-message {
    padding:          15px;
    border:           2px solid;
    border-radius:    8px;
    border-color:     @urgent;
    background-color: @background;
    text-color:       @urgent;
}

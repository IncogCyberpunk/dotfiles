/******************************************************************************
 * ROFI Color theme - Monokai Pro Enhanced
 * Colors adapted from: https://monokai.pro/
 * Author: Aakrisht Sharma Paudel (AakrishtSP)
 * Github: @AakrishtSP
 ******************************************************************************/
* {
    // Monokai Pro Color Palette
    background:     #2D2A2E;
    foreground:     #FCFCFA;
    selection:      #5B595C;
    comment:        #727072;
    red:            #FF6188;
    orange:         #FC9867;
    yellow:         #FFD866;
    green:          #A9DC76;
    blue:           #78DCE8;
    purple:         #AB9DF2;
    cyan:           #78DCE8;
    pink:           #FF6188;
    
    // Additional shades
    background-alt: #403E41;
    surface:        #423F42;
    overlay:        #5B595C;
    text-dim:       #939293;
    accent:         #FFD866;

    // Derived Theme Variables
    normal-foreground:           @foreground;
    selected-normal-foreground:  @background;
    urgent-foreground:           @red;
    active-foreground:           @green;
    selected-urgent-foreground:  @background;
    selected-active-foreground:  @background;
    
    normal-background:           @background;
    selected-normal-background:  @accent;
    urgent-background:           @background;
    active-background:           @surface;
    selected-urgent-background:  @red;
    selected-active-background:  @green;
    
    // Alternating pattern colors
    alternate-normal-background: @background-alt;
    alternate-normal-foreground: @normal-foreground;
    alternate-urgent-background: @background-alt;
    alternate-urgent-foreground: @urgent-foreground;
    alternate-active-background: @background-alt;
    alternate-active-foreground: @active-foreground;
    
    separatorcolor:              @overlay;
    bordercolor:                 @overlay;
    border-color:                @overlay;
    
    spacing:                     2;
    background-color:            @background;
    
    highlight:                   @purple;
    subtle-text:                 @text-dim;
}

window {
    background-color: @background;
    border:           1;
    border-color:     @overlay;
    border-radius:    8;
    padding:          15;
    width:            600;
}

mainbox {
    border:  0;
    padding: 0;
}

message {
    border:        1;
    border-color:  @overlay;
    padding:       8 0;
    margin:        0 0 5 0;
}

textbox {
    text-color: @foreground;
    font:       "JetBrains Mono 12";
}

listview {
    fixed-height: 0;
    border:       1;
    border-color: @overlay;
    spacing:      3;
    scrollbar:    true;
    padding:      8 0 0 0;
    margin:       5 0;
    dynamic:      true;
}

element {
    border:  0;
    padding: 8 12;
    border-radius: 4;
    margin:  2 0;
}

element-text {
    background-color: inherit;
    text-color:       inherit;
    vertical-align:   0.5;
}

element.normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
    font:             "Fira Sans 14";
}

element.normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
    font:             "Fira Sans Bold 14";
}

element.normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
    font:             "Fira Sans 14";
}

element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
    border-left:      3;
    border-color:     @highlight;
    font:             "Fira Sans Bold 14";
}

element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
    border-left:      3;
    border-color:     @purple;
    font:             "Fira Sans Bold 14";
}

element.selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
    border-left:      3;
    border-color:     @blue;
    font:             "Fira Sans Bold 14";
}

element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
    font:             "Fira Sans 14";
}

element.alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
    font:             "Fira Sans Bold 14";
}

element.alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
    font:             "Fira Sans 14";
}

scrollbar {
    width:        6;
    border:       0;
    handle-color: @purple;
    handle-width: 8;
    padding:      0;
}

inputbar {
    spacing:    0;
    text-color: @foreground;
    padding:    10;
    background: @background-alt;
    border-radius: 6;
    margin:     0 0 10 0;
    children:   [ prompt, textbox-prompt-colon, entry, case-indicator ];
}

textbox-prompt-colon {
    expand:     false;
    str:        "‚ùØ";
    margin:     0 10 0 5;
    text-color: @purple;
    font:       "Symbols Nerd Font 16";
}

entry {
    text-color:   @foreground;
    font:         "Fira Sans 14";
    cursor:       text;
    cursor-color: @accent;
}

prompt {
    text-color: @accent;
    font:       "Fira Sans Bold 14";
}

case-indicator {
    text-color: @text-dim;
    margin:     0 0 0 10;
}

mode-switcher {
    border:       2;
    border-color: @overlay;
    padding:      8;
    margin:       10 0 0 0;
}

button {
    padding:      5 10;
    border-radius: 4;
    font:         "Fira Sans 14";
}

button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
    border-bottom:    2;
    border-color:     @accent;
    font:             "Fira Sans Bold 14";
}

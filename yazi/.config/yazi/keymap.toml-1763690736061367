[manager]

[[manager.keymap]]
on = "<Esc>"
run = "escape"
desc = "Exit visual mode, clear selected, or cancel search"

[[manager.keymap]]
on = "<C-[>"
run = "escape"
desc = "Exit visual mode, clear selected, or cancel search"

[[manager.keymap]]
on = "q"
run = "quit"
desc = "Quit the process"

